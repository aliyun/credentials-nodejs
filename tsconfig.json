{
  "compilerOptions": {
      "declaration": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "ES2019",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./dist",
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ]
}